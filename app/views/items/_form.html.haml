//This is the New Items from consist of fields ,labels , submit button and also a validation for the form
%h2 New Item
= form_for([@project, @item]) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, 'error')
        prohibited this project from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :action
    %br/
    = f.text_field :action, size: '80'
  .actions
    = f.submit
